[settings]
screenchange-reload = true

[global/wm]
margin-top = 10
margin-bottom = 10

[colors]
primary = #1e1e20
secondary = #bfbfbf
highlight = #800000
urgent = #BA2922

[bar/top]
monitor=${env:MONITOR:}

width = 100%
height = 30
radius = 10
fixed-center = true

background = ${colors.primary}
foreground = ${colors.secondary}

line-size = 3
line-color = ${colors.secondary}

border-size = 0
border-color = ${colors.secondary}

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = "Fira Code:style=semibold:size=10;1"
font-1 = "FontAwesome:size=10;1"
font-2 = "Font Awesome 5 free:size=10;1"

modules-left = tray 
modules-center = xkeyboard | i3
modules-right = date | cpu memory root-fs user-fs | wlan eth net-speed | temp-cpu temp-gpu fancontrol battery pulseaudio | powermenu

tray-position = left
override-redirect = false

cursor-click = pointer
cursor-scroll = ns-resize


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colors.primary}
label-mode-background = ${colors.secondary}

label-focused = %index%
label-focused-background = ${colors.highlight}
label-focused-foreground = ${colors.secondary}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-background = ${colors.primary}
label-unfocused-foreground = ${colors.secondary}
label-unfocused-padding = 2

label-visible = %index%
label-visible-background = ${colors.primary}
label-visible-foreground = ${colors.secondary}
label-visible-padding = 2

label-urgent = %index%
label-urgent-background = ${colors.urgent}
label-urgent-padding = 2

[module/date]
type = internal/date
interval = 1

date =
date-alt = "%d-%m-%Y"

time = " %H:%M:%S"
time-alt = " %H:%M:%S"

format-prefix = 
format-foreground = ${colors.primary}
format-background = ${colors.secondary}
format-padding = 2

label = %time% %date%

[module/tray]
type = internal/tray

format-margin = 0px
tray-spacing = 0px

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

label-layout = "  %layout%  "
label-layout-underline = ${colors.secondary}
label-layout-foreground = ${colors.primary}
label-layout-background = ${colors.secondary}

[module/temp-cpu]
type = internal/temperature
interval = 5
thermal-zone = 5
warn-temperature = 90
label = CPU  %temperature%
label-background = ${colors.primary}
label-foreground = ${colors.secondary}

[module/temp-gpu]
type = internal/temperature
interval = 5
thermal-zone = 2
warn-temperature = 85
label = GPU  %temperature%
label-background = ${colors.primary}
label-foreground = ${colors.secondary}

[module/fancontrol]
type = custom/script
; interval calls status only
exec = ~/.config/polybar/scripts/fancontrol.sh --status
interval = 5
; click toggles
click-left = ~/.config/polybar/scripts/fancontrol.sh

[module/cpu]
type = internal/cpu
interval = 2
